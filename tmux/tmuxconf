# nem's tmux.conf
#
# <C-a> is leader

# 256 colors is plenty
set-option -g default-terminal xterm-256color

# easy config reload
bind-key R source-file ~/.tmux.conf \; display-message "tmux.conf reloaded."


### CORE ###
# <C-a> as leader stuff
set-option -g prefix C-a
unbind-key C-a
bind-key C-a send-prefix

# support emacs cursor movement
bind-key a send-prefix

# use UTF-8
set-option -g utf8 on
set-option -g status-utf8 on
set-window-option -g utf8 on

# windows and panes to start at index 1
# because of keyboard layouts
set -g base-index 1
set-window-option -g pane-base-index 1

# enable mouse
# for >= 2.1
#set-option -g mouse on
# < 2.1
#set-window-option -g mode-mouse on
#set-option -g mouse-select-pane on
#set-option -g mouse-resize-pane on
#set-option -g mouse-select-window on

# basic pane creation and switching
bind-key c new-window
bind-key t next-window
bind-key T previous-window

# display-message time
set-option -g display-time 1500

# copy mode
bind-key [ copy-mode

# vim-like copy-mode
# setup 'v' to begin selection, use vim keys
setw -g mode-keys vi
bind-key -t vi-copy v begin-selection
# TODO bind paste-buffer

# expand or shrink pane
bind-key < resize-pane -L 25
bind-key > resize-pane -R 25

# to toggle synchronize panes
bind-key Q set synchronize-pane

# use vim-like keys for splits and windows
bind-key v split-window -h
bind-key s split-window -v
bind-key h select-pane -L
bind-key j select-pane -D
bind-key k select-pane -U
bind-key l select-pane -R

# smart pane switching with awareness of vim splits
# See: https://github.com/christoomey/vim-tmux-navigator
is_vim="ps -o state= -o comm= -t '#{pane_tty}' | grep -iqE '^[^TXZ ]+ +(\\S+\\/)?g?(view|n?vim?x?)(diff)?$'"
bind-key -n C-h if-shell "$is_vim" "send-keys C-h"  "select-pane -L"
bind-key -n C-j if-shell "$is_vim" "send-keys C-j"  "select-pane -D"
bind-key -n C-k if-shell "$is_vim" "send-keys C-k"  "select-pane -U"
bind-key -n C-l if-shell "$is_vim" "send-keys C-l"  "select-pane -R"
bind-key -n C-\ if-shell "$is_vim" "send-keys C-\\" "select-pane -l"

### SUPERFICIAL ###

# show pane numbers <C-a> q for 2s
set-window-option -g display-panes-time 2000

# status bar update every second
set-option -g status-interval 1

# status-right
set-option -g status-right-length 70
# thyme counter and session name
set-option -g status-right "#(cat ~/.thyme-tmux) #[fg=#268bd2]\[#S\]"

# status-left
# cal / clock
set-option -g status-left-length 70
set-option -g status-left "#[fg=#cb4b16]%a #[fg=#839496]%b %d #[fg=#93a1a1]| %H:%M %Z"

# center window list in status bar
set-option -g status-justify centre
# window list format
set-option -g window-status-format '#F:#I:#W'
set-option -g window-status-current-format '#I:#W:#F'

